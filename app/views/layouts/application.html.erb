<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
   
    <div class="container">
	<%= render 'layouts/header' %>
	<% flash.each do |key, value| %>
	  <%= content_tag(:div, value, :class => "flash #{key}") %>
	<% end %>
	
	<%= render 'layouts/user_nav' %>
	<h1><%= sub_title %></h1>
<%= yield %>

    </div>
</body>
</html>
